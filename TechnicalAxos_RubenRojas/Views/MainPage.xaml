<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TechnicalAxos_RubenRojas.MainPage"
             Title="TechnicalAxos_RubenRojas">

    <ScrollView>
        
        <VerticalStackLayout
            BackgroundColor="#F6F4F5"
            Padding="16"
            Spacing="25">
            <Border
                Padding="16,8"
                BackgroundColor="#fff"
                StrokeThickness="0"
                StrokeShape="RoundRectangle 8">
                <Border.Shadow>
                    <Shadow Brush="Gray" Opacity="0.5" Radius="10"/>
                </Border.Shadow>
                <VerticalStackLayout>
                    <Label 
                        Text="About this app"
                        FontAttributes="Bold"/>
                    <Label 
                        Text="BundleId:"
                        FontAttributes="Bold"/>
                    <Label Text="{Binding BundleId}"/>
                </VerticalStackLayout>
            </Border>
            <Border
                Padding="16,8"
                BackgroundColor="#fff"
                StrokeThickness="0"
                StrokeShape="RoundRectangle 8">
                <VerticalStackLayout
                    Spacing="16">
                    <Label 
                        Text="Take a look on this!"
                        FontAttributes="Bold"/>
                    <Image
                        Source="{Binding ImageSource}"/>
                    <Button
                        BackgroundColor="#283238"
                        Text="Pick a new image!"
                        Command="{Binding ChangeImageCommand}"/>
                </VerticalStackLayout>
            </Border>
            <VerticalStackLayout
                    Spacing="16">
                <Label 
                        Text="Do you know this country?"
                        FontAttributes="Bold"/>
                <CollectionView
                        ItemsSource="{Binding Countries}">
                    <CollectionView.ItemsLayout>
                        <LinearItemsLayout Orientation="Horizontal"/>
                    </CollectionView.ItemsLayout>
                    <CollectionView.ItemTemplate>
                        <DataTemplate>
                            <Border
                                    BackgroundColor="#fff"
                                    StrokeThickness="0"
                                    StrokeShape="RoundRectangle 8"
                                    Padding="8"
                                    Margin="8,0">

                                <Grid
                                    RowSpacing="4"
                                    ColumnSpacing="8">
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto" />
                                        <RowDefinition Height="*" />
                                        <RowDefinition Height="Auto" />
                                    </Grid.RowDefinitions>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto" />
                                        <ColumnDefinition Width="Auto" />
                                    </Grid.ColumnDefinitions>
                                    <Label
                                        Grid.RowSpan="3"
                                        Text="{Binding Flag}"
                                        FontSize="40"/>
                                    <Label 
                                        Grid.Column="1"
                                        Grid.Row="0"
                                        Text="{Binding Name.Common, StringFormat='Common name: {0}'}" 
                                        FontSize="18"  />
                                    <Label 
                                        Grid.Column="1"
                                        Grid.Row="1"
                                        LineBreakMode="WordWrap"
                                        MaxLines="2" 
                                        WidthRequest="250"
                                        
                                        Text="{Binding Name.Official, StringFormat='Official name: {0}'}" 
                                        FontSize="14" 
                                        TextColor="Gray" />
                                    <Label 
                                        Grid.Column="1"
                                        Grid.Row="2"
                                        Text="{Binding Capital[0], StringFormat='Capital: {0}'}" 
                                        FontSize="14" 
                                        TextColor="Gray" />
                                </Grid>
                            </Border>
                        </DataTemplate>
                    </CollectionView.ItemTemplate>

                </CollectionView>
            </VerticalStackLayout>

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
